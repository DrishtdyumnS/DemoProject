
<section class="h-100 gradient-custom-2">
  <div class="container py-5 h-100"><h1 class="text-center">Show all Users</h1>
        <%@users.each do |user|%>
            <div class="card mgb" style="width: 18rem;">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item"><%=user.username%></li>
                    <li class="list-group-item"><%=user.email%></li>
                    <li class="list-group-item">
                    <%=link_to 'Show', user_path(user)%>
                        <%if logged_in? and (current_user == user or current_user.admin?)%>
                            <%=link_to 'Edit', edit_user_path(user)%>
                            <%= button_to 'Delete', user_path(user), method: :delete, data: { confirm: 'Are you sure?' } %>
                        <%end%>
                    </li>
                </ul>
            </div>
        <%end%>
    </table>
  </div>
</section>