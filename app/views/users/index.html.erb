<h1 class="text-center">Show all Users</h1>
<table>
    <tr>
        <th>AuthorName</th>
        <th>BookName</th>
        <th>Email</th>
        <th>Actions avaliable</th>
    </tr>
    <%@users.each do |user|%>
    <tr>
        <td><%=user.username%></td>
        <td><%=user.email%></td>
        <td>
            <td><%=link_to 'Show', user_path(user)%></td>
        <%if logged_in? and (current_user == user or current_user.admin?)%>
            <td><%=link_to 'Edit', edit_user_path(user)%></td>
            <td><%= button_to 'Delete', user_path(user), method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <%end%>
        </td>
    </tr>
    <%end%>
</table>