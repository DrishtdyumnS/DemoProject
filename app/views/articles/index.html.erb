
<section class="h-100 gradient-custom-2">
  <div class="container py-5 h-100">
<h1 class="text-center">Display All Articles</h1>
<br>
<div class="digg_pagination">
    <div class="page_info">
      <%= page_entries_info @articles %>
    </div>
    <%= will_paginate @articles, :container => false %>
  </div>
  <br>
    <%@articles.each do |article|%>
      <div class="card mb-3" style="width: 18rem;" >
        <div class="card-body">
          <h5 class="card-title text-truncate"><%=article.title%></h5>
          <h6 class="card-subtitle mb-2 text-muted">by - <%=link_to article.user.username,user_path(article.user)%></h6>
          <p class="card-text text-truncate"><%=article.description%></p>
        <%=link_to 'Show', article_path(article)%>
        <%if logged_in? and (current_user == article.user or current_user.admin?)%>
        <%=link_to 'Edit', edit_article_path(article)%>
        <%= button_to 'Delete', article_path(article), method: :delete, data: { confirm: 'Are you sure?' } %>
        <%end%>
        </div>
      </div>
    <%end%>
<br>
<div class="digg_pagination">
    <div class="page_info">
      <%= page_entries_info @articles %>
    </div>
    <%= will_paginate @articles, :container => false %>
  </div>
  </div>
</section>
